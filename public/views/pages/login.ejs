<!DOCTYPE html>
<html>
<head>
	<% include ../partials/head.ejs %>
</head>
<body>
	<header>
		<% include ../partials/header.ejs %>
	</header>

	<main>
		<div class="container">

			<div class="col-sm-6 col-sm-offset-3">
				<!-- show authentication messages -->
				<%  if(message.length>0) { %>
					<div class="alert alert-danger"><%= message %></div>
					<% } %>

					<!-- form login -->
					<form action="/login" method="post">
						<h2 class="login-title">Log In</h2>
						<div class="form-group">
							<label>Username</label>
							<input type="text" class="form-control" name="username">
						</div>
						<div class="form-group">
							<label>Password</label>
							<input type="password" class="form-control" name="password">
						</div>

						<button type="submit" id="login-btn" class="btn btn-info btn-lg">Log In</button>
					</form>

				<div class="wrapper">
					<p class="wrapper">Don't have an account?</p>
					<a href="/signup" class="login-btn-link"><div class="login-btn">Sign up</div></a>
				</div>
					</div>
				</div>

			</div>
		</main>

		<footer class="footer">
			<% include ../partials/footer.ejs %>
		</footer>
	</body>
	</html>

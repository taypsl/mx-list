<html>
<head>
  <% include ../partials/head.ejs %>

</head>
<body>

  <header>
    <% include ../partials/header.ejs %>
  </header>


  <main>

    <div class="hidden" id="playlist_id"><%= playlist._id %></div>
    <div class="container">

      <section class="col-sm-12 col-md-8 col-md-offset-2">
        <%  if(message.length>0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

          <article class="playlist">
            <!--<img class="playlist-img" id="imgURL" src="<%= playlist %>" />-->
            <h1 class="title"><%= playlist.title %></h1>
              <div class="authoredBy-wrapper">
              <p class="authoredBy">by</p><h4 class="username"><%= playlist.username%></h4>
            </div>
            <p class="synopsis" id="synopsis"> <%= playlist.synopsis %></p>
            <hr class="playlist-spacer">
          </article>

          <div class="video-container hidden"><iframe id="video" src="//www.youtube.com/embed/wEBlaMOmKV4?enablejsapi=1" frameborder="0" allowfullscreen></iframe></div>

          <% for(var i=0; i<playlist.songs.length; i++) {%>
            <% let count=i%>
            <article class="song-container" id="//www.youtube.com/embed/<%=playlist.songs[i].songId%>?enablejsapi=1">                
              <h2 class="artist-name col-6"><%= playlist.songs[i].artist %></h2>
              <div class="img-container">
                <img class="img-fluid imgURL" src="<%= playlist.songs[i].imgURL%>" alt="Responsive image" />
              </div>
              <div class="player-controls">
                <button class="play-video player-icon" href="//www.youtube.com/embed/<%=playlist.songs[i].songId%>?enablejsapi=1"><img src="assets/images/icn_play.png" /></button>
                <button class="pause player-icon hidden"><img src="assets/images/icn_pause.png"></button>
                <h3 class="song-name"><%= playlist.songs[i].name %></i></h3>
              </div>
              <p class="wikiExcerpt" id="<%= playlist.songs[i].wikiExcerpt %>"></p>

              <% if (playlist.songs[i].wikiExcerpt) { %>
              <p class="readMore"><a href="<%= playlist.songs[i].wikiExcerpt %>">...Read more</a></p>
              <% } %>
              <p class="song-description"><%= playlist.songs[i].description %></p>
              <hr class="playlist-spacer">

            <% } %>
            
          </article>

          <article class="playlist-footer">
            <p class="keywords" id="keywords"><%= playlist.keywords %></p>
          </article>
          
          <% if (playlistAuthor == currentUser) { %> 
             <!--  <button class="edit-playlist-button btn btn-default">Edit</button> -->
              <button class="delete-playlist-button btn btn-danger">Delete</button>
          <% } %>

      </section>

    </div>
  </main>

  <footer class="footer">
    <% include ../partials/footer.ejs %>
    <script src="../assets/js/wiki.js"></script>
    <script src="../assets/js/youtube.js"></script>
    
  </footer>


</body>
</html>

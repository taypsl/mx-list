<!DOCTYPE html>
<html>
<head>
	<% include ../partials/head.ejs %>
</head>
<body>

	<header>
		<% include ../partials/header.ejs %>
	</header>

	<main>
		<div class="container">

			<div class="col-sm-6 col-sm-offset-3">
				<!-- show authentication messages -->
				<%  if(message.length>0) { %>
						<div class="alert alert-danger"><%= message %></div>
				<% } %>

				<!-- signup form -->
				<form action="/signup" method="post">
					<h2 class="login-title">Sign Up</h2>
					<div class="form-group">
							<label>Email</label>
							<input type="email" class="form-control" name="email" required>
					</div>
					<div class="form-group">
							<label>Username</label>
							<input type="text" class="form-control" name="username" required>
					</div>
					<div class="form-group">
							<label>Password</label>
							<input type="password" class="form-control" name="password" required>
					</div>

					<button type="submit" id="signup-btn" class="btn btn-success btn-lg btn-warning">Sign Up</button>
				</form>

				<div class="wrapper">
					<p class="wrapper">Already have an account?</p>
					<a href="/login" class="login-btn-link"><div class="login-btn">Log in</div></a>
				</div>
			</div>

		</div>
	</main>

	<footer class="footer">
		<%include ../partials/footer.ejs %>
	</footer>

</body>
</html>
